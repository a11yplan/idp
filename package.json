  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "packageManager": "bun@1.1.42",
  "engines": {
    "node": ">=18.0.0"
  },
  "resolutions": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  }
}
