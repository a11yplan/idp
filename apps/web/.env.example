# =============================================================================
# Better Auth IDP - Environment Variables
# =============================================================================
# For local development: Copy this file to .env.local and fill in your values
# For Vercel deployment: Add these variables in the Vercel Dashboard

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# For Vercel: Use Vercel Postgres or Neon PostgreSQL
# Connection string format: postgresql://user:password@host:5432/database
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# -----------------------------------------------------------------------------
# Better Auth Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-here-min-32-characters"

# Application URLs (update for production deployment)
BETTER_AUTH_URL="http://localhost:3810"
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3810"
NEXT_PUBLIC_SITE_URL="http://localhost:3810"

# -----------------------------------------------------------------------------
# Email Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Resend API Key - Get from https://resend.com
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="a11yplan IDP"

# -----------------------------------------------------------------------------
# App Branding (OPTIONAL)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME="a11yplan IDP"
NEXT_PUBLIC_APP_DESCRIPTION="Identity Provider for a11yplan"
NEXT_PUBLIC_APP_LOGO="/logo.svg"
NEXT_PUBLIC_APP_FAVICON="/favicon.ico"

# Theme Colors (HSL format)
# Only primary brand color is configurable - secondary/accent use shadcn neutral grays automatically
NEXT_PUBLIC_PRIMARY_COLOR="hsl(262 83% 58%)"

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE="en"

# -----------------------------------------------------------------------------
# Feature Flags (OPTIONAL - Set to 'false' to disable)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_FEATURE_ORGANIZATIONS="true"
NEXT_PUBLIC_FEATURE_ADMIN="true"
NEXT_PUBLIC_FEATURE_BILLING="true"
NEXT_PUBLIC_FEATURE_INVITATIONS="true"

# -----------------------------------------------------------------------------
# Better Auth Admin Users (OPTIONAL)
# -----------------------------------------------------------------------------
# Comma-separated list of user IDs that have full admin access
# These users will see the full dashboard and navigation
# Example: NEXT_PUBLIC_ADMIN_USER_IDS="uuid1,uuid2,uuid3"
NEXT_PUBLIC_ADMIN_USER_IDS=""

# -----------------------------------------------------------------------------
# IDP Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed domains for OAuth redirects
# IDP_ALLOWED_DOMAINS="https://app1.example.com,https://app2.example.com"

# -----------------------------------------------------------------------------
# External Links (OPTIONAL)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_LINK_DOCS=""
NEXT_PUBLIC_LINK_SUPPORT=""
NEXT_PUBLIC_LINK_PRIVACY=""
NEXT_PUBLIC_LINK_TERMS=""

# -----------------------------------------------------------------------------
# OAuth Providers (OPTIONAL - Uncomment to enable)
# -----------------------------------------------------------------------------
# Google OAuth
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
# GITHUB_CLIENT_ID="your-github-client-id"
# GITHUB_CLIENT_SECRET="your-github-client-secret"

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV="development"

# =============================================================================
# VERCEL DEPLOYMENT CHECKLIST
# =============================================================================
#
# Required environment variables for Vercel:
# 1. DATABASE_URL - Get from Vercel Postgres or Neon
# 2. BETTER_AUTH_SECRET - Generate with: openssl rand -base64 32
# 3. BETTER_AUTH_URL - Your Vercel deployment URL (e.g., https://your-app.vercel.app)
# 4. NEXT_PUBLIC_BETTER_AUTH_URL - Same as BETTER_AUTH_URL
# 5. NEXT_PUBLIC_SITE_URL - Same as BETTER_AUTH_URL
# 6. RESEND_API_KEY - Get from https://resend.com
# 7. EMAIL_FROM - Your verified sender email
#
# See VERCEL_SETUP.md for detailed deployment instructions
ENABLE_USERNAME_AUTH=true