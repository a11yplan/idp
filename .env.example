# Better Auth Configuration
BETTER_AUTH_SECRET=your-random-secret-min-32-characters-generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Email Configuration (Resend)
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Public Environment Variables
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Identity Provider (IdP) Configuration
# Base domain for cross-subdomain cookie sharing (include the dot prefix)
# Example: .example.com allows auth.example.com to share cookies with app.example.com
IDP_BASE_DOMAIN=.localhost

# Comma-separated list of allowed redirect domains for IdP flow
# Only these domains can be used as redirect targets after authentication
# Example: app1.example.com,app2.example.com,admin.example.com
IDP_ALLOWED_DOMAINS=localhost:3001,localhost:3002

# Include extended user profile data (avatar, bio, phone) in IdP responses
IDP_INCLUDE_PROFILE=true

# Include user's organization memberships and roles in IdP responses
IDP_INCLUDE_ORGANIZATIONS=true
